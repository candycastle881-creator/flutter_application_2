class AnimatedBackground extends StatefulWidget {
  const AnimatedBackground({super.key});

  @override
  State<AnimatedBackground> createState() => _AnimatedBackgroundState();
}

class _AnimatedBackgroundState extends State<AnimatedBackground>
    with SingleTickerProviderStateMixin {
  late AnimationController _controller;

  @override
  void initState() {
    super.initState();
    _controller = AnimationController(
      vsync: this,
      duration: const Duration(seconds: 8),
    )..repeat();
  }

  @override
  void dispose() {
    _controller.dispose();
    super.dispose();
  }

  @override
  Widget build(BuildContext context) {
    return AnimatedBuilder(
      animation: _controller,
      builder: (context, child) {
        return CustomPaint(
          painter: AppleGradientPainter(_controller.value),
          size: Size.infinite,
        );
      },
    );
  }
}

class AppleGradientPainter extends CustomPainter {
  final double animationValue;

  AppleGradientPainter(this.animationValue);

  @override
  void paint(Canvas canvas, Size size) {
    // Apple-style premium gradient background
    final rect = Rect.fromLTWH(0, 0, size.width, size.height);

    final gradient = ui.Gradient.linear(
      Offset(0, 0),
      Offset(size.width, size.height),
      [
        const Color(0xFF000000),
        Color.lerp(
            const Color(0xFF1C1C1E),
            const Color(0xFF007AFF).withOpacity(0.15),
            sin(animationValue * 2 * pi) * 0.5 + 0.5)!,
        Color.lerp(
            const Color(0xFF000000),
            const Color(0xFF5856D6).withOpacity(0.1),
            cos(animationValue * 2 * pi) * 0.5 + 0.5)!,
        const Color(0xFF000000),
      ],
      [0.0, 0.3, 0.7, 1.0],
    );

    final paint = Paint()..shader = gradient;
    canvas.drawRect(rect, paint);

    // Animated orbs for premium feel
    for (int i = 0; i < 3; i++) {
      final offset = Offset(
        size.width *
            (0.3 + i * 0.2 + sin((animationValue + i * 0.3) * 2 * pi) * 0.15),
        size.height *
            (0.3 + i * 0.2 + cos((animationValue + i * 0.4) * 2 * pi) * 0.15),
      );

      final orbGradient = ui.Gradient.radial(
        offset,
        size.width * 0.4,
        [
          [Color(0xFF007AFF), Color(0xFF5856D6), Color(0xFFAF52DE)][i]
              .withOpacity(0.15),
          Colors.transparent,
        ],
      );

      final orbPaint = Paint()..shader = orbGradient;
      canvas.drawCircle(offset, size.width * 0.4, orbPaint);
    }
  }

  @override
  bool shouldRepaint(AppleGradientPainter oldDelegate) =>
      oldDelegate.animationValue != animationValue;
}
